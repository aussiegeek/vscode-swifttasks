{
  "name": "swifttasks",
  "publisher": "aussiegeek",
  "displayName": "swifttasks",
  "description": "Provide common tasks for swift packages",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.39.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:workbench.action.tasks.runTask"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "taskDefinitions": [
      {
        "type": "swift",
        "properties": {
          "selector": {
            "oneOf": [
              {
                "type": "object",
                "properties": {
                  "kind": {
                    "const": "package"
                  }
                },
                "required": [
                  "kind"
                ],
                "description": "Use the package selector to target the whole Swift package"
              },
              {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "kind": {
                    "const": "target"
                  }
                },
                "description": "Use the target selector to target one target only"
              }
            ]
          },
          "directory": {
            "type": "string",
            "description": "The directory the swift task will run in"
          },
          "taskType": {
            "type": "string",
            "enum": [
              "test",
              "build"
            ],
            "description": "The type of the task to run"
          }
        },
        "required": [
          "directory",
          "taskType",
          "selector"
        ]
      }
    ]
  },
  "preview": true,
  "license": "MIT",
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint --report-unused-disable-directives --max-warnings=0 src --ext ts",
    "lint:fix": "eslint --fix src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/chai": "4.2.9",
    "@types/glob": "7.1.1",
    "@types/mocha": "7.0.1",
    "@types/node": "12.12.27",
    "@types/vscode": "1.39.0",
    "@typescript-eslint/eslint-plugin": "2.19.2",
    "@typescript-eslint/parser": "2.19.2",
    "chai": "4.2.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-config-airbnb-typescript": "7.0.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-chai-expect": "2.1.0",
    "eslint-plugin-eslint-comments": "3.1.2",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-unicorn": "16.1.1",
    "glob": "7.1.6",
    "mocha": "7.0.1",
    "prettier": "1.19.1",
    "typescript": "3.7.5",
    "vscode-test": "1.3.0"
  }
}
